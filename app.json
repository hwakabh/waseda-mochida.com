{
  "name": "waseda-mchoda",
  "scripts": {},
  "environments": {
    "test": {
      "buildpacks": [
        { "url": "heroku/python" }
      ],
      "scripts": {
        "test": "pytest -v -s ."
      }
    }
  },
  "env": {
    "PIPELINE": {
      "required": true
    },
    "LINE_PAY_CHANNEL_ID": {
      "required": true
    },
    "LINE_PAY_CHANNEL_SECRET": {
      "required": true
    },
    "BREVO_SMTP_KEY": {
      "required": true
    },
    "RECAPTURE_SITE_KEY": {
      "required": false
    },
    "RECAPTURE_SECRET_KEY": {
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    {
      "plan": "heroku-redis:mini",
      "as": "REDIS"
    },
    {
      "plan": "heroku-postgresql:essential-0",
      "as": "DATABASE"
    }
  ],
  "buildpacks": [
    { "url": "heroku/python" }
  ]
}
